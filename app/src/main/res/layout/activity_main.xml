<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingStart="20dp"
    android:paddingEnd="20dp"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="150dp"
        android:layout_gravity="center"
        app:srcCompat="@drawable/firebase" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="25dp"
        android:gravity="center"
        android:text="FireBase"
        android:textColor="@color/dark_blue"
        android:textSize="45dp"
        android:textStyle="bold" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnSignUpEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="55dp"
        android:text="Đăng Nhập Với Email"
        android:drawableLeft="@drawable/baseline_email_24"
        android:background="@drawable/resource_background_button"
        android:textColor="@color/white"
        android:layout_gravity="center"
        android:padding="10dp"
        android:textSize="18sp" />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnSignUpPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Đăng Nhập Với Số Điện Thoại"
        android:drawableLeft="@drawable/baseline_local_phone"
        android:background="@drawable/resource_backgroundbutton_green"
        android:textColor="@color/white"
        android:layout_gravity="center"
        android:padding="10dp"
        android:textSize="18sp" />

</LinearLayout>